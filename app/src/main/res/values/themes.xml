<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hm3week8" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/blue</item>
       
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--    linear layout-->
    <style name="linear_layout" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="paddingStart">@dimen/margin_start_message</item>
        <item name="paddingEnd">@dimen/margin_end_message</item>
<!--        <item name="android:layout_marginStart">100dp</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/margin_end_message</item>-->
<item name="android:layout_marginTop">@dimen/margin_top</item>




    </style>

    <style name="icon_tick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/ic_double_tick_indicator</item>
        <item name="android:backgroundTint">@color/white</item>


    </style>
<!--    style of  message -->
    <style name="message_style" parent="Widget.AppCompat.TextView">


        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item   name="maxLines">6</item>
          <item name="android:textStyle">bold</item>

        <item name="android:textSize">@dimen/text_message_size</item>




    </style>

    <style name="message_style.send" >

        <item name="android:textColor">@color/white</item>

    </style>
    <style name="message_style.receive">

        <item name="android:textColor">@color/black</item>

    </style>



    <!-- style of time -->
    <style name="time" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
<style name="icons_all">
    <item name="android:layout_width">36dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>

</style>
</resources>